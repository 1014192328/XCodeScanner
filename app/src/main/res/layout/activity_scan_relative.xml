<?xml version="1.0" encoding="utf-8"?>
<com.simonlee.scanner.view.MaskRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.simonlee.scanner.view.AutoFitTextureView
        android:id="@+id/textureview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/black" />

    <com.simonlee.scanner.view.ScannerFrameView
        android:id="@+id/scannerframe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:scan_cycle="1500" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scannerframe"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/gray2"
        android:padding="5dp"
        android:text="@string/tips_scan"
        android:textColor="@color/gray" />

</com.simonlee.scanner.view.MaskRelativeLayout>
